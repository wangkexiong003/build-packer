{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                "c",
                "<wait>",
                "set gfxpayload=keep",
                "<enter><wait>",
                "linux /casper/vmlinuz quiet<wait>",
                " autoinstall<wait>",
                " ds=nocloud-net<wait>",
                "\\;s=http://<wait>",
                "{{.HTTPIP}}<wait>",
                ":{{.HTTPPort}}/<wait>",
                " ---",
                "<enter><wait>",
                "initrd /casper/initrd<wait>",
                "<enter><wait>",
                "boot<enter><wait>"
      ],
      "boot_wait": "5s",
      "headless": "{{user `headless`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "output_directory": "{{user `build_directory`}}/packer-{{user `template`}}-virtualbox",
      "guest_os_type": "Ubuntu_64",
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "sound": "null",
      "usb": false,
      "hard_drive_interface": "sata",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "{{user `http_directory`}}",
      "iso_urls": [
        "{{user `iso_directory`}}/{{user `iso_name`}}",
        "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `template`}}"
    },
    {
      "type": "hyperv-iso",
      "boot_command": [
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                "c",
                "<wait>",
                "set gfxpayload=keep",
                "<enter><wait>",
                "linux /casper/vmlinuz quiet<wait>",
                " autoinstall<wait>",
                " ds=nocloud-net<wait>",
                "\\;s=http://<wait>",
                "{{.HTTPIP}}<wait>",
                ":{{.HTTPPort}}/<wait>",
                " ---",
                "<enter><wait>",
                "initrd /casper/initrd<wait>",
                "<enter><wait>",
                "boot<enter><wait>"
      ],
      "boot_wait": "5s",
      "headless": "{{user `headless`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "output_directory": "{{user `build_directory`}}/packer-{{user `template`}}-hyperv",
      "enable_secure_boot": false,
      "generation": 1,
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "switch_name": "{{user `hyperv_switch`}}",
      "disk_size": "{{user `disk_size`}}",
      "disk_block_size": "{{user `vhdx_block_size`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_urls": [
        "{{user `iso_directory`}}/{{user `iso_name`}}",
        "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "communicator": "ssh",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "vm_name": "{{user `template`}}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "packer_script/ubuntu/scripts/networking.sh",
        "packer_script/_common/sshd.sh",
        "packer_script/_common/vagrant.sh",
        "packer_script/ubuntu/scripts/sudoers.sh",
        "packer_script/_common/motd.sh",
        "packer_script/ubuntu/scripts/update.sh",
        "packer_script/_common/virtualbox.sh",
        "packer_script/ubuntu/scripts/cleanup.sh",
        "packer_script/ubuntu/scripts/hostname.sh",
        "packer_script/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": ["echo Preparing for uploading..."]
    },
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "{{user `build_directory`}}/{{user `box_basename`}}-{{.Provider}}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{user `cloud_tag`}}",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `cloud_version`}}"
      }
    ]
  ],
  "variables": {
    "build_directory": "packer_build",
    "http_directory": "packer_script/ubuntu/http-subiquity",
    "cpus": "1",
    "memory": "2048",
    "disk_size": "65536",
    "vhdx_block_size": "1",
    "git_revision": "__unknown_git_revision__",
    "headless": "true",
    "hyperv_generation": "1",
    "hyperv_switch": "Default Switch",
    "ssh_timeout": "1200s",
    "host_name": "ubuntu20",
    "template": "vagrant-ubuntu-jammy",
    "box_basename": "ubuntu-jammy",
    "guest_additions_url": "",
    "cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "cloud_version": "{{isotime \"20060102\"}}",
    "cloud_tag": "wangkexiong/ubuntu-jammy",
    "mirror": "http://old-releases.ubuntu.com",
    "mirror_directory": "releases/22.04",
    "iso_name": "ubuntu-22.04-live-server-amd64.iso",
    "iso_checksum": "84aeaf7823c8c61baa0ae862d0a06b03409394800000b3235854a6b38eb4856f",
    "iso_directory": "packer_iso",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  }
}

